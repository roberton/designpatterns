{
  "$schema": "https://json.schemastore.org/tsconfig",
  // "extends": "@tsconfig/node12/tsconfig.json",
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules/"],
  "compilerOptions": {
    "outDir": "dist",

    // Enable super strict setting
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  }
}
